{% extends 'front/base.html.twig' %}

{% block body %}
<main id="main">
    <br> <br> <br><br> <br> <br>
    <center><h1>Fichepatient: {{ fichepatient.nom }} {{ fichepatient.prenom }}</h1></center>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fichepatient.id }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ fichepatient.weight }}</td>
            </tr>
            <tr>
                <th>Muscle Mass</th>
                <td>{{ fichepatient.muscleMass }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ fichepatient.height }}</td>
            </tr>
            <tr>
                <th>Allergies</th>
                <td>{{ fichepatient.allergies }}</td>
            </tr>
            <tr>
                <th>Illnesses</th>
                <td>{{ fichepatient.illnesses }}</td>
            </tr>
            <tr>
                <th>Breakfast</th>
                <td>{{ fichepatient.breakfast }}</td>
            </tr>
            <tr>
                <th>Midday</th>
                <td>{{ fichepatient.midday }}</td>
            </tr>
            <tr>
                <th>Dinner</th>
                <td>{{ fichepatient.dinner }}</td>
            </tr>
            <tr>
                <th>Snacks</th>
                <td>{{ fichepatient.snacks }}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ fichepatient.calories }}</td>
            </tr>
            <tr>
                <th>Other</th>
                <td>{{ fichepatient.other }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('app_fiche_index') }}" class="btn btn-primary">Back to List</a>
        <a href="{{ path('app_fiche_edit', {'id': fichepatient.id}) }}" class="btn btn-primary">Edit</a>
        <a href="{{ path('app_fiche_show_pdf', { 'id': fichepatient.id }) }}" class="btn btn-primary" style="background-color: red;">Download PDF</a>
        <a href="{{ path('app_fiche_show_excel', {'id': fichepatient.id}) }}" class="btn btn-primary" style="background-color: green;">Download Excel</a>
        {# Button to delete the fichepatient with confirmation form #}
        {{ include('fiche/_delete_form.html.twig') }}
    </div>
</main>

{# Button to send email with PDF attachment #}
  

{% endblock %}
