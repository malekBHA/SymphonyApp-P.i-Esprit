{% extends 'admin/base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
         
        
           
            
            <tr>
                <th>MethodePaiement</th>
                <td>{{ commande.methodePaiement }}</td>
            </tr>
            <tr>
                <th>EtatCommande</th>
                <td>{{ commande.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.date ? commande.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>InstructionSpeciale</th>
                <td>{{ commande.instructionSpeciale }}</td>
            </tr>
                  <tr>
             <ul>
               <th>Meals</th>
                <td>
                        {% for meal in commande.meals %}
                            <li>{{ meal.nomRepas }}</li> 
                        {% endfor %}
                    </ul>
                    </td>
              </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commande_index') }}">back to list</a>

    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}" >edit</a>

    <a href="{{ path('sms') }}"  class="btn-back">sms</a>

    {{ include('admin/commande/_delete_form.html.twig') }}
{% endblock %}
