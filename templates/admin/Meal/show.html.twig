{% extends 'admin/base.html.twig' %}

{% block title %}Meal{% endblock %}

{% block body %}
    <h1>Meal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meal.id }}</td>
            </tr>
            <tr>
                <th>NomRepas</th>
                <td>{{ meal.nomRepas }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ meal.ingredients }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td> <ol>
                            {% set ingredientsArray = meal.recette|split('.') %}
                            {% for ingredient in ingredientsArray %}
                                <li>{{ ingredient }}</li>
                            {% endfor %}
                        </ol>
                        </td>
            </tr>
            <tr>
                <th>TypeRepas</th>
                <td>{{ meal.typeRepas }}</td>
            </tr>
           {#<tr>
                <th>Image</th>
                <td><img src="{{ asset(meal.image) }}" class="img-fluid2" alt="{{ meal.nomRepas }}">/td>
            </tr>#}
            <tr>
                <th>NombrePersonnes</th>
                <td>{{ meal.nombrePersonnes }}</td>
            </tr>
            <tr>
                <th>DureePreparation</th>
                <td>{{ meal.dureePreparation }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ meal.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meal_index') }}">back to list</a>
    <a href="{{ path('add_to_cart', {'id': meal.id}) }}" class="btn-visit align-self-start">Commander</a>

    <a href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>

    {{ include('admin/meal/_delete_form.html.twig') }}
{% endblock %}
