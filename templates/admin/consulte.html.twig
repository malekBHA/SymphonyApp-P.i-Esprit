{% extends 'admin/base.html.twig' %}

{% block title %}{{ user.id}}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0">Consulter {{ user.nom}} :</h3>
        <a class="btn btn-dark d-none d-sm-inline-block" role="button" href="{{ path('admin_liste') }}" style="width: 147.2344px;"><strong>Retour</strong></a>
    </div>
    <div class="row g-0 text-start d-md-flex justify-content-md-center align-items-md-center">
        <div class="col d-xl-flex justify-content-xl-center align-items-xl-center" style="height: 750.141px;">
            <div class="card" data-bss-hover-animate="pulse" style="width: 536px;height: 563.141px;">
                <div class="card-body text-dark d-block" style="height: 497.156px;">
                    <div>
                        <h4 class="card-title" style="font-family: Alatsi, sans-serif; font-size: 16px;">Pr√©nom:</h4>
                        <h7>{{ user.prenom}}</h7>
                    </div>
                    <hr>
                    <div>
                        <h4 class="card-title" style="font-family: Alatsi, sans-serif; font-size: 16px;">Nom:</h4>
                        <h7>{{ user.nom}}</h7>
                    </div>
                    <hr>
                    <div>
                        <h4 class="card-title" style="font-family: Alatsi, sans-serif; font-size: 16px;">Email:</h4>
                        <h7>{{ user.email}}</h7>
                    </div>
                    <hr>
                    <div>
                        <h4 class="card-title" style="font-family: Alatsi, sans-serif; font-size: 16px;">Tel:</h4>
                        <h7>{{ user.tel}}</h7>
                    </div>
                    <hr>
                    <div>
    <h4 class="card-title" style="font-family: Alatsi, sans-serif; font-size: 16px;">Roles:</h4>
    {% for role in user.roles %}
        <h7>{{ role|replace({'ROLE_': ''}) }}</h7>
    {% endfor %}
</div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
