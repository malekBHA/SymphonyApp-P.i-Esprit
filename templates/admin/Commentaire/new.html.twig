{% extends 'admin/base.html.twig' %}



    {% block body %}
    <div class="container">
        <div class="text-center">
            <h1>Create new Commentaire</h1>
        </div>
    
    <div class="container">
        <div class="form-container">
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    
            <div class="form-group">
                {{ form_label(form.contenu, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.contenu) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.contenu) }}
                    </div>
                {% endif %}
            </div>
    
            <div class="form-group">
                {{ form_label(form.id_user, 'Nom de l utilisateur', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.id_user, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.id_user) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.id_user) }}
                    </div>
                {% endif %}
            </div>
    
            <div class="form-group">
                {{ form_label(form.id_pub, 'Publication', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.id_pub, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.id_pub) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.id_pub) }}
                    </div>
                {% endif %}
            </div>
    
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
    
            {{ form_end(form) }}
    
            <a href="{{ path('back_commentaire_back') }}">back to list</a>
        </div>
    </div>
    {% endblock %}