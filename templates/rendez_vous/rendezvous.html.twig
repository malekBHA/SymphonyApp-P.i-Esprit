{# rendezvous.html.twig #}

{% extends 'front/base.html.twig' %}

{% block body %}


  <main id="main">

    {# Hero Section - Home Page #}
    <section id="hero" class="hero">
        <img src="{{ asset('front/img/hero-bg.jpg') }}" alt="" data-aos="fade-in">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <h2 data-aos="fade-up" data-aos-delay="100">Welcome to Our Website</h2>
                    <p data-aos="fade-up" data-aos-delay="200">Unlocking Health and Wellness: Our Expert Nutritionists are Here to Streamline Your Journey!</p>
                </div>
                <form class="sign-up-form d-flex" data-aos="fade-up" data-aos-delay="300" method="GET" action="{{ path('app_rendez_vous') }}#api_users_search_by_nom">
                    <input type="text" class="form-control" name="name" placeholder="Enter Doctor Name">
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </section>
<script>
    function scrollToSearchResults() {
        // Scroll to the search results section
        document.getElementById('api_users_search_by_nom').scrollIntoView({ behavior: 'smooth' });
    }
</script>
    <!-- Search results -->
    <br>
     <section id="api_users_search_by_nom" class="container">
        <div class="row justify-content-center">
            {% for medecin in medecins %}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ medecin.nom }}</h5>
                            <p class="card-text">{{ medecin.prenom }}</p>
                            <p class="card-text">{{ medecin.tel }}</p>
                            <p class="card-text">ID: {{ medecin.id }}</p>
{% if medecin.id is defined %}
    <form action="{{ path('app_r_d_v_new', {'medic_id': medecin.id}) }}" method="GET">
        <button type="submit" class="btn btn-primary">Book</button>
    </form>
    
{% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

</main>






