<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>{% block title %}Welcome{% endblock %}</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  {% block css %}
  
  {# Favicons #}
  <link href= "{{ asset('front/img/favicon.png') }}" rel="icon">
  <link href= "{{ asset('front/img/apple-touch-icon.png') }}" rel="apple-touch-icon">

  {# Fonts #}
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href= "https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

  {# Vendor CSS Files #}
  <link href="{{ asset('front/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
  <link href="{{ asset('front/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
  <link href="{{ asset('front/vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
  <link href="{{ asset('front/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">
  <link href="{{ asset('front/vendor/aos/aos.css') }}" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  {# Template Main CSS File #}
  <link href="{{ asset('front/css/main.css') }}" rel="stylesheet">
<style>
 .card { 
    background-color: #F5F5DC;
    border: 2px solid #e84545;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    opacity: 1;
    transition: transform 0.3s ease;
    width:90%;
    margin-left:20px;
 }
 
 .card:hover { 
    transform: scale(1.1);
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
 }

 .title{ 
    color: #e84545;
    font-style: italic;
    margin-top:20px;
    justify-content: center;
    display: flex;
    margin-bottom:30px;
 }
 
 .btn-primary { 
    background-color: #FD9089;
    border: 2px solid #e84545;
 }
 
 .btn-secondary { 
    border: 2px solid #e84545;
 }
 
 .label { 
    color: #e84545;
    font-weight: bold;
 }
 
 .card-title { 
    color: #e84545;
    font-size: 25px;
    font-family: Comic Sans MS;
    font-weight: bold;
    font-style: italic;
 }
 
 .card-text { 
    font-weight: bold;
 }
</style>
  {% endblock %}

</head>
{% block header %}

  <header id="header" class="header fixed-top d-flex align-items-center">
  <div class="container-fluid d-flex align-items-center justify-content-between">
      <a href="{{ path('home') }}" class="logo d-flex align-items-center me-auto me-xl-0">
          <h1>Vitalize</h1>
          <span>.</span>
      </a>
      <nav id="navmenu" class="navmenu">
          <ul>
              
              <li><a href="{{ path('app_publication_index') }}" style="color: red;">Publication</a></li>
              {% if  is_granted('ROLE_MEDECIN') %}                     
             <li><a href="{{ path('app_fiche_index') }}#fichedespatients">Medecin</a></li>
              {% endif %}
              <li><a href="{{ path('app_rendez_vous') }}#portfolio"class="active">Appointment</a></li>
       
              <li><a href="{{ path('app_meal') }}" style="color: red;">Meals</a></li>
              <li><a href="{{ path('app_commande_index') }}" style="color: red;">Mes commandes</a></li>
              <li class="dropdown has-dropdown"><a href="{{ path('app_activite_index') }}"><span>Activités</span> <i class="bi bi-chevron-down"></i></a>
               {% if  is_granted('ROLE_MEDECIN') %}
              
                  
                <ul class="dd-box-shadow">
                  <li><a href="{{ path('app_activite_new') }}">Ajouter une activité</a></li>
                </ul>
                 {% endif %}
              </li>
              <li class="dropdown has-dropdown"><a href="{{ path('app_evenement_index') }}"><span>Evènement</span> <i class="bi bi-chevron-down"></i></a>
                <ul class="dd-box-shadow">
                   {% if  is_granted('ROLE_MEDECIN') %}
                   <li><a href="{{ path('app_evenement_new') }}">Ajouter un évènement</a></li>
                      {% endif %}
                  <li><a href="{{ path('calendar') }}">Calendrier</a></li>
                </ul>
              </li>
              
                      
             <li><a style="color: red;"  href="{{ path ('app_contact') }}">Contact</a></li>
          </ul>
          <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
      <div>
     <a class="btn-getstarted" href="{{ path ('app_user') }}"> Profil </a> &nbsp &nbsp

      <a class="btn-getstarted" href="{{ path ('app_logout') }}"> Deconnexion </a>&nbsp &nbsp
      <a href="{{ path('show_cart') }}">
        <i class="fa fa-shopping-cart"></i> Panier
    </a>
  </div>
</header> 
  {% endblock %}


  {% block body %}
  {% endblock %}
  

  
  {% block js %}
  {# Vendor JS Files #}
  <script src="{{ asset('front/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
  <script src="{{ asset('front/vendor/glightbox/js/glightbox.min.js') }}"></script>
  <script src="{{ asset('front/vendor/purecounter/purecounter_vanilla.js') }}"></script>
  <script src="{{ asset('front/vendor/isotope-layout/isotope.pkgd.min.js') }}"></script>
  <script src="{{ asset('front/vendor/swiper/swiper-bundle.min.js') }}"></script>
  <script src="{{ asset('front/vendor/aos/aos.js') }}"></script>
  <script src="{{ asset('front/vendor/php-email-form/validate.js') }}"></script>

  {# Template Main JS File #}
  <script src="{{ asset('front/js/main.js') }}"></script>
  {% endblock %}
  


</body>

</html>